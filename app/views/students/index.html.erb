<p id="notice"><%= notice %></p>

<h1>Students</h1>

<div>
  <%= form_tag(students_path, method: :get, class: 'form-inline', style: 'float: right') do %>
    <%= text_field_tag :query , params[:query], class: "form-control", placeholder: "Filter Students here..."%>
    <%= submit_tag 'Search', name: nil, class: "btn btn-primary active"%>
<% end %>
</div>

<br>
<table class="table table-striped table-hover .table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Mark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.subject %></td>
        <td><%= student.mark %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path , class: "btn btn-success active"%>
